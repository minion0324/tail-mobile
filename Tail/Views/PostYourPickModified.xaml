                            <Label
                                HorizontalOptions="Start"
                                HorizontalTextAlignment="Start"
                                Style="{StaticResource BlackLabelSemiBold12}"
                                Text="{x:Static Common:AppResources.WageringUnitText}"
                                VerticalOptions="Start" />

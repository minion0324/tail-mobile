                                x:Name="WageringValue"
                                Margin="0,10,0,0"
                                HorizontalOptions="FillAndExpand"
                                Keyboard="Numeric"
                                ReturnKeyType="Done"
                                Style="{StaticResource EntryRegular14}"
                                Text="{Binding WageringUnitValue}">
